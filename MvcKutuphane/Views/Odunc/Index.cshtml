@using MvcKutuphane.Models.Entity
@model List<TBLHAREKET>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Ödünç Kitap Listesi</h2>



<table class="table table-bordered">
    <tr>
        <th>İşlem ID</th>
        <th>Kitap Adı</th>
        <th>Üye</th>
        <th>Personel</th>
        <th>Alış Tarihi</th>
        <th>Üye İade Tarihi</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.TBLKITAP.AD</td>
            <td>@item.TBLUYELER.AD @item.TBLUYELER.SOYAD</td>
            <td>@item.TBLPERSONEL.PERSONEL</td>
            <td>@Convert.ToDateTime(@item.ALISTARIH).ToString("dd.MM.yyyy")</td>
            <td>@Convert.ToDateTime(@item.IADETARIH).ToString("dd.MM.yyyy")</td>
           
            <td><a href="/Odunc/Odunciade/@item.ID" class="btn btn-default" style="background-color:#ffd800">Kitabı İade et</a></td>
           
        </tr>
    }


</table>
