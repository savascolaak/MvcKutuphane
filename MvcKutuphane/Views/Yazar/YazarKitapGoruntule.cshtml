@using MvcKutuphane.Models.Entity
@model List<TBLKITAP>
@{
    ViewBag.Title = "YazarKitapGoruntule";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>@ViewBag.YazarAdi Kitapları</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>Kitap Adı</th>
        <th>Yazar</th>
        <th>Basım Yılı</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.AD</td>
            <td>@item.TBLYAZAR.AD @item.TBLYAZAR.SOYAD</td>
            <td>@item.BASIMYIL</td>
        </tr>

    }

</table>