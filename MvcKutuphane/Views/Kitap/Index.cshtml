@using MvcKutuphane.Models.Entity
@model List<TBLKITAP>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Kitap Listesi</h2>

@using (Html.BeginForm("Index", "Kitap", FormMethod.Get))
{
    <div style="margin:15px;">
        <b>Aranacak Kitap Adını Girin</b>
        @Html.TextBox("p")
        <input type="submit" class="btn btn-primary" value="Ara" />
    </div>
}


<table class="table table-bordered">
    <tr>
        <th>Kitap Adı</th>
        <th>Kategori</th>
        <th>Yazar</th>
        <th>Basım Yılı</th>
        <th>Yayınevi</th>
        <th>Sayfa</th>
        <th>Stok</th>
        <th>Güncelle</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.AD</td>
            <td>@item.TBLYAZAR.AD @item.TBLYAZAR.SOYAD</td>
            <td>@item.TBLKATEGORI.AD</td>
            <td>@item.BASIMYIL</td>
            <td>@item.YAYINEVI</td>
            <td>@item.SAYFA</td>
            @if (item.DURUM == true)
            {
                <td>Stokta Var</td>
            }
            else
            {
                <td>Stokta Yok</td>
            }
            <td><a href="/Kitap/KitapGetir/@item.ID" class="btn btn-success">Güncelle</a></td>
            <td><a href="/Kitap/KitapSil/@item.ID" class="btn btn-danger">Sil</a></td>

        </tr>
    }


</table>
<a href="/Kitap/KitapEkle" class="btn btn-success">Yeni Kitap Ekle</a>